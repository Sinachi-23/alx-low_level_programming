#include <stdio.h>
/**
 * main-program entry point.
 * Return:0 if no errors, non zero if errors
 */
int main(void)
{
	char i;

	for (i = 'z'; i >= 'a'; i--)
		putchar(i);
	putchar('\n');
	return (0);
}

Task 8

#include <stdio.h>
/**
 * main-program entry point.
 * Return: 0 if no error, non zero if error.
 */
int main(void)
{
	int i;
	char hexvalues[] = "0123456789abcdef";

	for (i = 0; i < 16; i++)
	{
		putchar(hexvalues[i]);
	}
	putchar('\n');
	return (0);
}

